<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginb"
    tools:context="encomplus.com.truckapp.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fremel"
        android:background="@drawable/trucks">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/trucks"
            android:layout_gravity="center"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
android:background="#1572f9"
        android:weightSum="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45"
            android:textSize="15sp"
            android:textColor="#000"
            android:background="@drawable/dw2"
            android:id="@+id/UserRegistation"
            android:onClick="UserRegistation"
            android:text="User Registation"
            android:padding="10dp"/>
        <Space
            android:layout_width="0dp"
            android:background="@drawable/dw2"
            android:layout_height="wrap_content"
            android:layout_weight=".1"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".45"
            android:textSize="15sp"
            android:id="@+id/DriverRegistation"
            android:text="Driver Registation"
            android:onClick="DriverRegistation"
            android:background="@drawable/dw2"
            android:padding="10dp"/>
    </LinearLayout>

</RelativeLayout>
